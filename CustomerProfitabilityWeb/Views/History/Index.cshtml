@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Lịch sử Upload";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-history me-2"></i>Lịch sử Upload Excel</h2>
            <p class="text-muted">Danh sách các lần upload dữ liệu</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="border-left: 4px solid #8AAAE5 !important;">
                <div class="card-body">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-upload me-2"></i>Tổng số lần upload
                    </h6>
                    <h2 class="mb-0" style="color: #8AAAE5; font-weight: 700;">@Model.Count()</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="border-left: 4px solid #4CAF50 !important;">
                <div class="card-body">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-check-circle me-2"></i>Upload thành công
                    </h6>
                    <h2 class="mb-0" style="color: #4CAF50; font-weight: 700;">@Model.Count(x => x.Status == "Success")</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="border-left: 4px solid #FF9800 !important;">
                <div class="card-body">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-database me-2"></i>Tổng giao dịch
                    </h6>
                    @{
                        int totalTrans = 0;
                        foreach (var item in Model)
                        {
                            totalTrans += (int)item.TotalTransactions;
                        }
                    }
                    <h2 class="mb-0" style="color: #FF9800; font-weight: 700;">@totalTrans</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0" style="border-left: 4px solid #F44336 !important;">
                <div class="card-body">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-dollar-sign me-2"></i>Tổng doanh thu
                    </h6>
                    @{
                        decimal totalRev = 0;
                        foreach (var item in Model)
                        {
                            totalRev += (decimal)item.TotalRevenue;
                        }
                        var totalB = totalRev / 1000000000;
                    }
                    <h2 class="mb-0" style="color: #F44336; font-weight: 700;">@totalB.ToString("N1")B</h2>
                    <small class="text-muted">VNĐ</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5><i class="fas fa-list me-2"></i>Danh sách Upload</h5>
                <a href="/Upload/Index" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Upload mới
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Chưa có dữ liệu upload nào. <a href="/Upload/Index">Upload ngay</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Tên file</th>
                                <th>Ngày upload</th>
                                <th>User</th>
                                <th class="text-center">Sản phẩm</th>
                                <th class="text-center">Khách hàng</th>
                                <th class="text-center">Giao dịch</th>
                                <th class="text-end">Doanh thu</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.BatchID</strong></td>
                                    <td>
                                        <i class="fas fa-file-excel text-success me-2"></i>
                                        @item.FileName
                                        <br>
                                        @if (item.FileSize != null)
                                        {
                                            var fileKB = (long)item.FileSize / 1024.0;
                                            <small class="text-muted">@fileKB.ToString("N0") KB</small>
                                        }
                                    </td>
                                    <td>
                                        @((DateTime)item.UploadDate).ToString("dd/MM/yyyy HH:mm")
                                        <br>
                                        <small class="text-muted">@(item.ProcessingTime ?? 0) giây</small>
                                    </td>
                                    <td>
                                        <i class="fas fa-user me-1"></i>
                                        @item.UserFullName
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@item.TotalProducts</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@item.TotalCustomers</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning">@item.TotalTransactions</span>
                                    </td>
                                    <td class="text-end">
                                        @{
                                            var revenue = (decimal)item.TotalRevenue / 1000000;
                                        }
                                        <strong>@revenue.ToString("N0")M</strong>
                                    </td>
                                    <td class="text-center">
                                        @if (item.Status == "Success")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Thành công
                                            </span>
                                        }
                                        else if (item.Status == "Failed")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Thất bại
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-spinner fa-spin me-1"></i>Đang xử lý
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/History/Details/@item.BatchID" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteBatch(@item.BatchID)" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteBatch(batchId) {
            if (!confirm('Bạn có chắc muốn xóa batch này?')) {
                return;
            }

            $.ajax({
                url: '/History/Delete/' + batchId,
                type: 'POST',
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Lỗi khi xóa batch');
                }
            });
        }
    </script>
}